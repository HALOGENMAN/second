<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
             <% if (products.length > 0) { %> 
                <ul>
                    <% products.forEach(p => { %>
                        <li><p><%= p.productData.title  %> (<%= p.qty %>)</p></li>
                        <form action="/cart-remove-item" method="POST">
                            <input type="hidden" name="productId" value="<%= p.productData.id %>" />
                            <input type="hidden" name="productPrice" value="<%= p.productData.price %>" />
                            <input type="submit" value="Remove" class="btn">
                        </form>
                    <% }) %>
                </ul>    
            <% } else { %> 
                <h1>no cart item is present</h1>        
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>
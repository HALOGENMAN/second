<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>  
            <div class="user-message user-message--error"><%= errorMessage %></div>    
        <% } %>
        <form class="product-form" action="/signup" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-mail</label>
                <input class="<%= validateError.find(e=> e.param === 'email') ? 'invalid' : '' %>" type="email" name="email" id="email" value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= validateError.find(e=> e.param === 'password') ? 'invalid' : '' %>" type="password" name="password" id="password" value="<%= oldInput.password %>">
            </div>
            <div class="form-control">
                <label for="password"> Confirm Password</label>
                <input class="<%= validateError.find(e=> e.param === 'confirmPassword') ? 'invalid' : '' %>" type="password" name="confirmPassword" id="password" value="<%= oldInput.confirmPassword %>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">
                Create Account
            </button>
        </form>
        <br>
        
    </main>
<%- include('../includes/end.ejs') %>